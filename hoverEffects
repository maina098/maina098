        };

        function showCode(effectId) {
            const modal = document.getElementById('codeModal');
            const codeSnippet = document.getElementById('codeSnippet');
            const modalTitle = document.getElementById('modalTitle');

            let title = '';
            switch (effectId) {
                case 'btn1': title = 'CSS for Button Hover 1 (Center Reveal)'; break;
                case 'btn2': title = 'CSS for Button Hover 2 (Top/Bottom Reveal)'; break;
                case 'btn3': title = 'CSS for Button Hover 3 (Circle Grow)'; break;
                case 'btn4': title = 'CSS for Button Hover 4 (Slide from Left)'; break;
                case 'img1': title = 'CSS for Image Hover 1 (Scale & Text Pop)'; break;
                case 'img2': title = 'CSS for Image Hover 2 (Full Overlay)'; break;
                case 'img3': title = 'CSS for Image Hover 3 (Zoom & Caption)'; break;
                case 'navbar-effects': title = 'CSS for All Navbar Hover Effects'; break; 
                case 'flipCard': title = 'CSS for Card Flip Hover Effect'; break;
                case 'profileCard1': title = 'CSS for Profile Card 1 (Overlay & Button Fade)'; break;
                case 'profileCard2': title = 'CSS for Profile Card 2 (Slide Up Info)'; break;
                case 'profileCard3': title = 'CSS for Profile Card 3 (Border Glow & Rotate)'; break;
                case 'profileCard4': title = 'CSS for Profile Card 4 (Zoom & Social Icons)'; break;
                default: title = 'CSS Code Snippet';
                case 'zoomInOut': title = 'CSS for Zoom In-Out Profile Card'; break;
                
            }
            modalTitle.textContent = title;
            codeSnippet.textContent = codeSnippets[effectId];
            modal.style.display = 'flex';
        }

        function closeModal() {
            const modal = document.getElementById('codeModal');
            modal.style.display = 'none';
        }

        window.onclick = function(event) {
            const modal = document.getElementById('codeModal');
            if (event.target == modal) {
                modal.style.display = 'none';
            }
        }











    </script>
</body>
</html>